	TEMP_TRAIN_DOUBLE_8(0+72*3,1,0)
}
spriteset (SPRITESET_LINIMO_BACK_3, "grf/LINIMO.png") {
	TEMP_TRAIN_DOUBLE_8(48+72*3,1,0)
}
spriteset (SPRITESET_LINIMO_WAG_3, "grf/LINIMO.png") {
	TEMP_CAR_8_NEW(24+72*3,1,0)
}

spriteset (SPRITESET_LINIMO_4, "grf/LINIMO.png") {
	TEMP_TRAIN_DOUBLE_8(0+72*4,1,0)
