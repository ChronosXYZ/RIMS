//Spritesets
spriteset (SPRITESET_M802_CC, "grf/M802.png") {
	TEMP_DOUBLE_6_FRONT(20,0,1)
}
spritegroup SPRITEGROUP_M802_CC {
	loading: SPRITESET_M802_CC;
	loaded:  SPRITESET_M802_CC;
}

spriteset (SPRITESET_PURCH_M802_CC, "grf/M802.png") {
	TEMP_PURCH_DUAL_NEW(144,14*2,0,1)
}
